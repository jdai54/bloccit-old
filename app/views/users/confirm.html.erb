<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Are you sure these values are correct?</h2>
    <h3>Email: <%= @user.email %> </h3>
    <h3>Name: <%= @user.name %> </h3>
  </div>
</div>

<div class="row">
  <div class="col-md-4", style="width: auto;">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>

  <div class="col-md-4", style="width: auto;">
    <%= link_to "No", new_user_path, class: 'btn btn-danger' %>
  </div>
</div>
